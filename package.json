{
  "name": "better-cloudflare",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format": "npm run format:fix",
    "preview": "npx serve out",
    "test": "tsx --test test/*.test.ts test/*.test.tsx",
    "test:unit": "npm run test",
    "test:all": "npm run test && npm run test:e2e",
    "test:e2e": "playwright test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:web": "npm run build",
    "build:desktop": "npm run build && npm run tauri:build",
    "clean": "node -e \"const fs=require('fs');const path=require('path');const rm=(p)=>fs.rmSync(p,{recursive:true,force:true});rm(path.join(process.cwd(),'dist'));\"",
    "clean:unix": "rm -rf ./dist && find ./src -name '*.js' -delete",
    "clean:win": "powershell -NoProfile -Command \"Remove-Item -Recurse -Force ./dist; Get-ChildItem -Recurse -Filter *.js ./src | Remove-Item -Force\"",
    "check": "npm run format:check && npm run lint && npm run typecheck && npm run test",
    "ci": "npm run check",
    "clean:src": "tsx ./scripts/cleanup-src-js.ts",
    "check-spf": "tsx ./scripts/check-spf.ts",
    "docs": "typedoc --out docs src --excludePrivate --excludeExternals"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/postcss": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "cloudflare": "^4.5.0",
    "clsx": "^2.1.1",
    "i18next": "^23.0.1",
    "idb": "^7.1.1",
    "lucide-react": "^0.525.0",
    "next": "^16.1.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-i18next": "^14.0.1",
    "sql.js": "^1.8.0",
    "sqlite3": "^5.1.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "better-sqlite3": "^8.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.44.0",
    "@simplewebauthn/browser": "^6.0.0",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.1.0",
    "react-window": "^1.8.7",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "turbo": "^2.6.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.4.10"
  }
}
